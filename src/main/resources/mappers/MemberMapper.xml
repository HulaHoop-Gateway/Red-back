<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hulahoop.redback.member.model.dao.MemberMapper">

    <!-- 기존 전체 회원 조회 -->
    <select id="selectAllMembers" resultType="com.hulahoop.redback.member.model.dto.MemberDTO">
        SELECT
            member_code,
            name,
            id,
            password,
            phone_num,
            email,
            address,
            user_type,
            notification_status
        FROM T_Member
    </select>

    <!-- ⭐ 전화번호로 member_code 조회 (추가됨) -->
    <select id="findMemberCodeByPhone" resultType="string" parameterType="string">
        SELECT member_code
        FROM T_Member
        WHERE phone_num = #{phoneNumber}
    </select>

</mapper>
